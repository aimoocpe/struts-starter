<tiles-definitions>

    <definition name="baseLayout" template="/tiles/layout.jsp">
        <put-attribute name="title" value="Template" cascade="true"/>
        <put-attribute name="header" value="/tiles/header.jsp"/>
        <put-attribute name="footer" value="/tiles/footer.jsp"/>
    </definition>

    <definition name="tilesOne" extends="baseLayout">
        <put-attribute name="title" value="Hello Tiles 1" cascade="true"/>
        <put-attribute name="body" value="/content1.jsp"/>
    </definition>
    
    <definition name="tilesTwo" extends="baseLayout">
        <put-attribute name="title" value="Hello Tiles 2" cascade="true"/>
        <put-attribute name="body" value="/content2.jsp"/>
    </definition>

